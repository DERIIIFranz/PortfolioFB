<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#559b53" />
            <stroke
				android:width="1dp"
				android:color="#356134"/>
            <corners
                android:radius="4dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
				android:angle="270"
				android:centerX="35%"
				android:centerColor="#559b53"
				android:startColor="#65B862"
				android:endColor="#264525"
				android:type="linear"/>
            
		<padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp"/>
            
			<stroke
				android:width="1dp"
				android:color="#356134"/>

            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>